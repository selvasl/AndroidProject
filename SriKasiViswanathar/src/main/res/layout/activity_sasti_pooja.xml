<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:background="#D3D3D3"
        app:navigationIconTint="@android:color/black"
        android:elevation="4dp"
        app:title="Sasti Pooja"
        app:titleTextColor="#800000">

    </androidx.appcompat.widget.Toolbar>



    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Heading -->
        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0000FF"
            android:text="22nd Sunday December 2024"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingBottom="8dp" />

        <!-- Content -->
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#800000"
            android:text="Sasti Pooja will begin at 8:00 PM with a grand Shanmukha Abhishekam. The ceremony will feature special offerings to Lord Murugan, including Vedic chanting and a procession around the temple premises. Devotees are encouraged to participate in the sacred rituals to receive the blessings of Lord Murugan.

The evening will conclude with the distribution of special Prasad and a musical devotional performance. Join us in celebrating this holy occasion with devotion and joy."
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btn_contribute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contribute"
                android:backgroundTint="#0000FF"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_sponsor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sponsor"
                android:backgroundTint="#0000FF"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
