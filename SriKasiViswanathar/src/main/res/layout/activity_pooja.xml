<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        app:title="Pooja"
        app:titleTextColor="#800000"
        app:navigationIconTint="#000000"
        android:minHeight="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="65dp"> <!-- Add padding to ensure the spinner is not above toolbar -->

        <!-- Spinner under Toolbar -->
        <Spinner
            android:id="@+id/messages_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:popupBackground="#D3D3D3"
            android:fontFamily="@font/poppins_regular"
            android:entries="@array/pooja_messages"
            android:spinnerMode="dropdown" />

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Single Card for All Content -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header Title -->
                    <TextView
                        android:id="@+id/pradosham_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pradosham"
                        android:textSize="24sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#800000"
                        android:paddingBottom="8dp" />

                    <!-- Card 1 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="28th Friday - November 2024"
                        android:textColor="#0000FF"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pooja Time: 10:00 AM - 12:00 PM"
                        android:textColor="#333333"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sponsors"
                        android:textColor="#0000FF"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Venkatesh Prabhu and Family - RH46\nShankar Kumar and Family - RH23"
                        android:textColor="#333333"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Card 2 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="29th Saturday - November 2024"
                        android:textColor="#0000FF"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pooja Time: 11:00 AM - 01:00 PM"
                        android:textColor="#333333"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sponsors"
                        android:textColor="#0000FF"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ramesh Kumar and Family - RH12\nSita Devi and Family - RH34"
                        android:textColor="#333333"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Card 3 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30th Sunday - November 2024"
                        android:textColor="#0000FF"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pooja Time: 02:00 PM - 04:00 PM"
                        android:textColor="#333333"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sponsors"
                        android:textColor="#0000FF"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kavitha Reddy and Family - RH78\nPrabhu and Family - RH90"
                        android:textColor="#333333"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                </LinearLayout>

        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
