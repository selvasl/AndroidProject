<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImageStyle">
        <item name="android:background">@drawable/circle_background</item> <!-- Apply the circle background -->
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minWidth">48dp</item> <!-- Set width -->
        <item name="android:minHeight">48dp</item> <!-- Set height equal to width -->
        <item name="android:padding">8dp</item> <!-- Optional padding -->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="backgroundTint">#800000</item><!-- Add rounded background -->
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="CustomBottomNavTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


